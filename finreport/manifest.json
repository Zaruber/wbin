{
  "manifest_version": 3,
  "name": "Finreport",
  "version": "0.1.0",
  "description": "Finreport: недельные финансовые отчеты Wildberries",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://seller-services.wildberries.ru/*",
    "https://seller.wildberries.ru/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://seller.wildberries.ru/*"],
      "js": ["content/injector.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/page-hook.js", "pngwing.com.png"],
      "matches": ["https://seller.wildberries.ru/*"]
    }
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  }
}


