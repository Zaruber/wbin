{
  "manifest_version": 3,
  "name": "WBin",
  "version": "1.4",
  "description": "Скачивание данных, статистики, фин. отчетов с сайта Wildberries простым способом",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "webRequest",
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://cmp.wildberries.ru/*",
    "https://*.wildberries.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://cmp.wildberries.ru/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "WBin - Получить данные API",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["results.html", "results.js", "popup.css", "popup.js", "github-logo.svg", "inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 